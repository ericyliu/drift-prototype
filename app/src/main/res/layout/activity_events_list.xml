<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventsListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text="My Name"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="Health: 100%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="Coins: 10000"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".5"
        android:fillViewport="false"
        android:id="@+id/events_scrollview">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/events_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <include android:id="@+id/event_1000" layout="@layout/event_listing" />
            <include android:id="@+id/event_1001" layout="@layout/event_listing" />
            <include android:id="@+id/event_1002" layout="@layout/event_listing" />
            <include android:id="@+id/event_1003" layout="@layout/event_listing" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkgray"
        android:orientation="horizontal">

        <Button
            android:id="@+id/events_button"
            android:layout_weight=".22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/events_button"/>
        <Button
            android:id="@+id/profile_button"
            android:layout_weight=".22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/profile_button"/>
        <Button
            android:id="@+id/shop_button"
            android:layout_weight=".22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/shop_button"/>
        <Button
            android:id="@+id/settings_button"
            android:layout_weight=".22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/settings_button"/>

    </LinearLayout>


</LinearLayout>
